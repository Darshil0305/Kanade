{
  "name": "@kanade/web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev --port 3000",
    "dev:turbo": "next dev --port 3000 --turbo",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf .next dist coverage",
    "analyze": "cross-env ANALYZE=true npm run build",
    "export": "next build && next export"
  },
  "dependencies": {
    "@kanade/ui": "workspace:*",
    "@kanade/utils": "workspace:*",
    "next": "^15.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-native-web": "^0.19.13"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.0.0",
    "@next/eslint-config-next": "^14.0.4",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/react": "19",
    "@types/react-dom": "19",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.2"
  }
}
